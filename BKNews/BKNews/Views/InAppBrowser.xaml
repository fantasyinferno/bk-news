<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BKNews.InAppBrowser">
    <ContentPage.Content>
        <StackLayout Spacing="0">
            <ProgressBar Progress="0.2" x:Name="progressBar" Margin="0, -8, 0, -6" VerticalOptions="FillAndExpand" />
            <WebView x:Name="webView" WidthRequest="1000" HeightRequest="1000" Navigating="WebOnNavigating" Navigated="WebOnNavigated"></WebView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>